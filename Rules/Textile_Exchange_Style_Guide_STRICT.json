{
  "terminology": [
    {
      "match": "towards",
      "replace_with": "toward",
      "type": "auto_fix",
      "severity": "advice",
      "message": "Use US English: 'toward' not 'towards'."
    },
    {
      "match": "The Textile Exchange",
      "type": "flag",
      "severity": "warning",
      "message": "Never use 'The Textile Exchange'. Use 'Textile Exchange'."
    },
    {
      "match": "degrowth",
      "type": "flag",
      "severity": "error",
      "message": "Avoid the term 'degrowth'. Use 'slow growth' instead."
    },
    {
      "match": "&",
      "message": "Textile Exchange style guide doe not like &",
      "severity": "warning",
      "replace_with": "and"
    },
    {
      "match": "organisations",
      "message": "Textile Exchange use American English",
      "severity": "error",
      "replace_with": "organizations"
    }
  ],
  "flag_only": [
    {
      "match": "sustainable",
      "severity": "warning",
      "message": "Avoid generic sustainability claims unless supported by concrete evidence."
    }
  ]
}