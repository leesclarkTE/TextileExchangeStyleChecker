{
  "terminology": [
    {
      "match": "towards",
      "replace_with": "toward",
      "type": "auto_fix",
      "severity": "advice",
      "message": "Use US English: 'toward' not 'towards'."
    },
    {
      "match": "The Textile Exchange",
      "type": "flag",
      "severity": "warning",
      "message": "Never use 'The Textile Exchange'. Use 'Textile Exchange'."
    },
    {
      "match": "degrowth",
      "replace_with": "slow growth",
      "type": "auto_fix",
      "severity": "error",
      "message": "Avoid the term 'degrowth'. Use 'slow growth' instead."
    },
    {
      "match": "&",
      "replace_with": "and",
      "type": "auto_fix",
      "severity": "warning",
      "message": "Textile Exchange style guide does not like &"
    },
    {
      "match": "organisations",
      "replace_with": "organizations",
      "type": "auto_fix",
      "severity": "error",
      "message": "Textile Exchange uses American English"
    },
    {
      "match": "companys",
      "replace_with": "companies",
      "type": "auto_fix",
      "severity": "error",
      "message": "Correct spelling to 'companies'."
    },
    {
      "match": "meeningful",
      "replace_with": "meaningful",
      "type": "auto_fix",
      "severity": "error",
      "message": "Correct spelling to 'meaningful'."
    }
  ],
  "flag_only": [
    {
      "match": "sustainable",
      "type": "flag",
      "severity": "warning",
      "message": "Avoid generic sustainability claims unless supported by concrete evidence."
    },
    {
      "match": "ALL CAPS sentence",
      "type": "flag",
      "severity": "warning",
      "message": "Avoid writing entire sentences in ALL CAPS."
    }
  ]
}
